<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Driver.DriverGenerateQrFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Qr Code"
            android:textSize="16sp"
            android:textColor="@color/primary_text"
            android:textStyle="bold"
            android:layout_gravity="center"/>

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <ImageView
            android:id="@+id/qrCodeImageView"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:contentDescription="Scan Me"
            android:layout_marginBottom="16dp"
            />

        <TextView
            android:id="@+id/studioTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TODA Moon"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="8dp"
            />

        <TextView
            android:id="@+id/scanQrTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Scan QR to Join Queueing"
            android:textSize="14sp"
            android:textColor="#777777"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="24dp"
            />

        <Button
            android:id="@+id/learnMoreButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Qr Details"
            android:paddingVertical="15dp"
            style="@style/googleButton"
            android:textColor="#000000"
            android:layout_marginBottom="16dp"
            />

        <Button
            android:id="@+id/addFromGalleryButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add from Gallery"
            android:paddingVertical="15dp"
            />




    </LinearLayout>

</LinearLayout>